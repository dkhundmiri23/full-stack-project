<% include ../layout.ejs %>
<h1>Edit Technology</h1>
<form action="/technologies/update/<%= technology._id %>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <label for="name">Name:</label>
    <input type="text" name="name" value="<%= technology.name %>" required>
    <label for="description">Description:</label>
    <textarea name="description" required><%= technology.description %></textarea>
    <button type="submit">Update Technology</button>
</form>
