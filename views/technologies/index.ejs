<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Technologies</title>
</head>
<body>
    <h1>Technologies</h1>
    <ul>
        <% technologies.forEach(technology => { %>
            <li>
                <%= technology.name %> - <%= technology.description %>
                <a href="/technologies/edit/<%= technology._id %>">Edit</a>
                <form action="/technologies/delete/<%= technology._id %>" method="POST" style="display: inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
    <a href="/technologies/new">Add New Technology</a>
</body>
</html>
<a href="/">Back to Home Page</a>

